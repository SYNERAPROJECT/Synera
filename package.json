{
    "name": "synera",
    "version": "1.0.0",
    "description": "An AI-powered blockchain automation framework designed for Web3 scalability, decentralized intelligence, and secure data processing.",
    "main": "src/server/server.js",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "NODE_ENV=production node src/server/server.js",
        "dev": "NODE_ENV=development nodemon src/server/server.js",
        "test": "jest --coverage",
        "lint": "eslint . --fix",
        "format": "prettier --write .",
        "security-audit": "npm audit --production",
        "build": "rimraf dist && babel src --out-dir dist --copy-files"
    },
    "dependencies": {
        "axios": "^1.3.0",
        "dotenv": "^16.0.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express-rate-limit": "^7.0.0",
        "sequelize": "^6.28.0",
        "sqlite3": "^5.1.2",
        "winston": "^3.8.2",
        "web3": "^4.0.0",
        "solana-web3.js": "^1.50.0"
    },
    "devDependencies": {
        "jest": "^29.0.0",
        "nodemon": "^3.0.0",
        "eslint": "^8.51.0",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.0",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "overrides": {
        "sequelize": {
            "pg": "^8.10.0"
        }
    },
    "author": "Synera",
    "license": "MIT",
    "keywords": [
        "AI",
        "Blockchain",
        "Web3",
        "Solana",
        "Smart Contracts",
        "DeFi",
        "NFT",
        "Node.js",
        "Sequelize",
        "Express"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SYNERAPROJECT/synera.git"
    },
    "bugs": {
        "url": "https://github.com/SYNERAPROJECT/synera/issues"
    },
    "homepage": "https://www.syneralabs.io"
}
